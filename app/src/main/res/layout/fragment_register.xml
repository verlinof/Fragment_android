<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment"
    android:layout_marginHorizontal="28dp"
    android:layout_marginVertical="28dp"
    >

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:textSize="28dp"
        />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRegister"
        android:layout_marginVertical="18dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:hint="Username"
        android:background="@drawable/rounded_grey_edittext"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsername"
        android:layout_marginVertical="18dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:hint="Email"
        android:background="@drawable/rounded_grey_edittext"
        />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginVertical="18dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:hint="Phone"
        android:inputType="number"
        android:background="@drawable/rounded_grey_edittext"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPhone"
        android:layout_marginVertical="18dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/rounded_grey_edittext"
        />

    <CheckBox
        android:id="@+id/cbAgreement"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@id/etPassword"
        />

    <TextView
        android:id="@+id/tvAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="By checking the box you are agree with our Terms and Condition"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_alignBaseline="@id/cbAgreement"
        android:layout_toEndOf="@id/cbAgreement"
        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvToLogin"
        android:backgroundTint="@color/link_color"
        android:text="Register"
        android:layout_marginVertical="15dp"
        />

    <RelativeLayout
        android:id="@+id/tvToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/tvToLogin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account?"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvToLogin1"
            android:text=" Login"
            android:textColor="@color/link_color"
            />
    </RelativeLayout>

</RelativeLayout>